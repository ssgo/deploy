FROM alpine
ADD dist/ /opt/
RUN sed -i 's/dl-cdn.alpinelinux.org/mirrors.aliyun.com/' /etc/apk/repositories \
	&& apk add tzdata git openssh-client docker && rm -f /var/cache/apk/* /usr/bin/dockerd /usr/bin/containerd* /usr/bin/ctr /usr/bin/runc /usr/bin/docker-proxy \
	&& cp -f /usr/share/zoneinfo/PRC /etc/localtime
ENTRYPOINT /opt/server
HEALTHCHECK --interval=10s --timeout=3s CMD /opt/server check


docker run -it -v /opt/case/deploy:/opt/case/deploy -v /opt/deploy:/opt/data -v /var/run/docker.sock:/var/run/docker.sock alpine ash


1、 cp 目录
2、 宿主机路径


docker run -it --rm --network=host -v /opt/case/deploy:/opt/case/deploy -v /opt/deploy:/opt/deploy -v /var/run/docker.sock:/var/run/docker.sock alpine ash

